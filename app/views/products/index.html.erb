<p id="notice"><%= notice %></p>

<h1>产品</h1>


<table>
  <thead>
    <tr>
      <th>产品名称</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to '详情', product %></td>
        <td><%= link_to '编辑', edit_product_path(product) %></td>
        <td><%= link_to '删除', product, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建产品', new_product_path %>
