<p id="notice"><%= notice %></p>

<h1><%= t('task_table') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('product') %></th>
      <th><%= t('customer') %></th>
      <th><%= t('count') %></th>
      <th><%= t('special') %></th>
      <th><%= t('package') %></th>
      <th><%= t('package') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_tables.each do |task_table| %>
      <tr>
        <td><%= task_table.product.name %></td>
        <td><%= task_table.customer.name %></td>
        <td><%= task_table.count %></td>
        <td><%= task_table.special %></td>
        <td><%= task_table.package %></td>
        <td><%= task_table.shipment %></td>
        <td><%= link_to t('show'), task_table %></td>
        <td><%= link_to t('edit'), edit_task_table_path(task_table) %></td>
        <td><%= link_to t('destroy'), task_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

