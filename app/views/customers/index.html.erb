<p id="notice"><%= notice %></p>

<h1><%= t('customer') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to t('show'), customer %></td>
        <td><%= link_to t('edit'), edit_customer_path(customer) %></td>
        <td><%= link_to t('destroy'), customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_customer'), new_customer_path %>
